<p id="notice"><%= notice %></p>

<h1>Welcome Blog</h1>
<p> Aca puedes publicar tus posts</p>

<h1>Listing Posts</h1>
    <% @posts.each do |post| %>
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <%= link_to 'Show', post %>
        <% if can? :manage, post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    <% end %>
<br><br>

<%= link_to 'New Post', new_post_path %>
