<h1>Welcome Blog</h1>
<p> Aca puedes publicar tus posts</p>

<h1>Listing Posts</h1>
    <% @posts.each do |post| %>
        <h3><%= link_to post.title, post %></h3>
        <p><%= post.content %></p>
        <% if can? :manage, post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        <% end %>
    <% end %>
    <% if can? :create, Post %>
      <br><%= link_to 'Crear Post', new_post_path %>
    <% end %>
