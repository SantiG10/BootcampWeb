<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <br>
    <i class="fa fa-arrow-left" aria-hidden="true" style="color: #337ab7"></i>
    <%= link_to "Back", pets_path %>
    <h1>New Pet</h1>
    <%= form_for @pet do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name"%>
        <br>
        <%= f.text_field :name, placeholder: "Name Pet", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :pet_type, "Type Pet" %>
        <br>
        <%= f.text_field :pet_type, placeholder: "Type Pet", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :age, "Age Pet" %>
        <br>
        <%= f.text_field :age, placeholder: "Age Pet", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit class:"btn btn-primary btn-block"%>
      </div>
  </div>
    <% end %>
</div>
