<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <i class="fa fa-arrow-left" aria-hidden="true" style="color: #337ab7"></i>
    <%= link_to "Back", tower_path(@tower) %>
    <h1>New Apartment</h1>
    <%= form_for [@tower,@apartment] do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name"%>
        <br>
        <%= f.text_field :name, placeholder: "Name Apartment", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :floor, "Floor" %>
        <br>
        <%= f.text_field :floor, placeholder: "Floor", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit class:"btn btn-primary btn-block"%>
      </div>
  </div>
    <% end %>
</div>
